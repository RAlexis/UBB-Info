<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Auth.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Auth.Register</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Auth.Logout</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>Topic.Add</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/AddServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>Topic.Delete</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/DeleteServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FilterServlet</servlet-name>
        <servlet-class>Topic.Filter</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FilterServlet</servlet-name>
        <url-pattern>/FilterServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddTopicServlet</servlet-name>
        <servlet-class>Topic.AddTopic</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AddTopicServlet</servlet-name>
        <url-pattern>/AddTopicServlet</url-pattern>
    </servlet-mapping>

    
    <servlet>
        <servlet-name>GetTopicsInDb</servlet-name>
        <servlet-class>Topic.GetTopicsInDb</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>GetTopicsInDb</servlet-name>
        <url-pattern>/GetTopicsInDb</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddReplyServlet</servlet-name>
        <servlet-class>Topic.AddReply</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddReplyServlet</servlet-name>
        <url-pattern>/AddReplyServlet</url-pattern>
    </servlet-mapping>
</web-app>