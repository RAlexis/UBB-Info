% 15. For a given n, positive, determine
% all decomposition of n as a sum of consecutive natural numbers

:- use_module(library(clpfd)).

n_list(N, Ls) :-
    L #=< N,
    L #> 0,
    indomain(L),
    length(Ls, L),
    Ls ins 0..N,
    foldl(consecutive, Ls, _, _),
    sum(Ls, #=, N),
    label(Ls).

consecutive(A, Prev, A) :- A #= Prev + 1.
